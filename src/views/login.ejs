<%- include('partials/header.ejs') %>
<body class="d-flex align-items-center justify-content-center" style="height: 100vh; background-color: #17a2b8;">
    <nav class="navbar navbar-dark bg-info w-100">
        <div class="container">
            <a href="/" class="navbar-brand d-flex align-items-center">
                <span class="h4 mb-0 text-white">BlogTech</span>
            </a>
        </div>
    </nav>

    <div class="container d-flex justify-content-center">
        <div class="card p-4 shadow-lg" style="width: 100%; max-width: 400px;">
            <h3 class="text-center text-info">Login</h3>

            <form action="/login" method="POST">
                <div class="mb-3">
                    <label for="email" class="form-label">E-mail</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Digite seu e-mail" required>
                </div>
                <div class="mb-3">
                    <label for="senha" class="form-label">Senha</label>
                    <input type="password" class="form-control" id="senha" name="senha" placeholder="Digite sua senha" required>
                </div>
                <button type="submit" class="btn btn-info w-100">Entrar</button>
            </form>

            <div class="text-center mt-3">
                <p>NÃ£o tem uma conta? <a href="/registrar" class="text-info">Cadastre-se</a></p>
            </div>
        </div>
    </div>
</body>
<script>
    
    window.onload = function() {
        <% if (typeof error !== "undefined") { %>
            showToast("<%= error %>", "rgb(220, 53, 69)"); 
        <% } %>

        <% if (typeof success !== "undefined") { %>
            showToast("<%= success %>", "rgb(220, 53, 69)"); 
        <% } %>
    }

    function showToast(message, bgColor) {
        Toastify({
            text: message,
            duration: 3000, 
            close: true,
            gravity: "top", 
            position: "right", 
            backgroundColor: bgColor, 
            stopOnFocus: true
        }).showToast()
    }
</script>

