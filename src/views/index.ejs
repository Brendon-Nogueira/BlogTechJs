<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar_homepage.ejs') %>

    <div class="container mt-4">
        <div class="row">
            <!-- Coluna lateral esquerda (opcional) -->
            <div class="col-md-3 d-none d-md-block">
                <div class="card p-3 shadow-sm">
                    <h5 class="text-muted">Categorias</h5>
                    <ul class="list-group">
                        <li class="list-group-item"><a href="#">Tecnologia</a></li>
                        <li class="list-group-item"><a href="#">Programação</a></li>
                        <li class="list-group-item"><a href="#">Notícias</a></li>
                        <li class="list-group-item"><a href="#">Opinião</a></li>
                    </ul>
                </div>
            </div>

            <!-- Feed principal -->
            <div class="col-md-6">
                <% artigos.forEach(artigo => { %>
                    <div class="card mb-3 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title"><%= artigo.titulo %></h5>
                            <p class="text-muted">Categoria: <%= artigo.categoria ? artigo.categoria.titulo : 'Sem categoria' %></p>
                            <p class="card-text"><%= artigo.conteudo.substring(0, 200) %>...</p>
                            <a href="/artigos/<%= artigo.slug %>" class="btn btn-primary btn-sm">Leia mais</a>
                            
                            <!-- Botões de interação -->
                            <div class="mt-3">
                                <button class="btn btn-outline-primary btn-sm">Curtir</button>
                                <button class="btn btn-outline-secondary btn-sm">Comentar</button>
                                <button class="btn btn-outline-info btn-sm">Compartilhar</button>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>

           
            <div class="col-md-3 d-none d-md-block">
                <div class="card p-3 shadow-sm">
                    <h5 class="text-muted">Sugestões para você</h5>
                    <p>Veja artigos recomendados com base no seu interesse.</p>
                    <a href="#" class="btn btn-info btn-sm">Ver sugestões</a>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer.ejs') %>
</body>
